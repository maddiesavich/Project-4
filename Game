import java.awt.Color;
import java.awt.FlowLayout;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.JComponent;
import javax.swing.Timer;

public class Game extends JComponent implements ActionListener, KeyListener{
	
	// Initialize
	int posRectX = 800;
	int posRectY = 800;
	int posBallX = 0;
	int posBallY = 0;
	int width = getWidth();
	int height = getHeight();
	
	// Timer for animation
	private Timer t = new Timer(5, this);

	// Constructor
	public Game() {
		// Set Layout
		setLayout(new FlowLayout(FlowLayout.LEFT));
		
		// Add the KeyListener and setFocusable to true
		addKeyListener(this);
		setFocusable(true);
	}

	// Paint Component Method
	public void paint(Graphics g) {
		// Set the background color to be black
		g.setColor(Color.BLACK);
		g.fillRect(0, 0, width, height);
	}

	// Method to draw the moving pad
	private void drawRect(Graphics g) {
		g.setColor(Color.BLUE);
		g.drawRect(0, 800, 100, 100);
		repaint();
	}

	// KeyListener Methods
	@Override
	public void keyPressed(KeyEvent e) {
		if (e.getKeyCode() == KeyEvent.VK_LEFT) {
			System.out.println("Key Pressed" + e.getKeyCode());
			posRectX =- 2;
		}
		else if (e.getKeyCode() == KeyEvent.VK_RIGHT) {
			System.out.println("Key Pressed" + e.getKeyCode());
			posRectX =+ 2;
		}
	}

	@Override
	public void keyReleased(KeyEvent e) {
		
	}

	@Override
	public void keyTyped(KeyEvent e) {
		
	}

	// ActionListener Method
	@Override
	public void actionPerformed(ActionEvent e) {
		
	}

}
